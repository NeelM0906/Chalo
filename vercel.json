{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "installCommand": "cd frontend && npm ci",
  "buildCommand": "cd frontend && npm run build",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "frontend/dist/index.html" }
  ],
  "env": {
    "NODE_VERSION": "20",
    "ROLLUP_SKIP_NODEJS_NATIVE": "true"
  }
}

